@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
@{
    Layout = null;
}

<head>
    <link href="~/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" type="text/css" rel="stylesheet" />
</head>

<body>
    <h1 style="text-align:center; margin-top:50px;">Регистрация нового пользователя</h1>

    <form method="post" asp-controller="Account" asp-action="Register" style="text-align:center;">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Username"></label><br />
            <input asp-for="Username" type="email" />
            <span asp-validation-for="Username"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName"></label> <br />
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label> <br />
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Position"></label> <br />
            <input asp-for="Position" />
            <span asp-validation-for="Position"></span>
        </div>


        <div class="form-group">
            <label asp-for="Password"></label> <br />
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="PasswordConfirm"></label> <br />
            <input asp-for="PasswordConfirm" type="password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Регистрация" class="btn btn-outline-success" />
        </div>

    </form>
</body>